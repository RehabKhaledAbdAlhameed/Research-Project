<h2>Index</h2>
<script>
    $(document).ready(function(){
    $('.nav li  > .sub-menu').parent().hover(function () {
        var submenu = $(this).children('.sub-menu');
        if ($(submenu).is(':hidden')) {
            $(submenu).slideDown(200);
        } else {
            $(submenu).slideUp(200);
        }
    });
    })

</script>
<nav>
    <ul class="nav">
        @{
            foreach (var item in Model)
            {
                <li>
                    <a @*href="Home/About"*@>@item.Sec_Name</a>
                    @if (item.Companies.Count > 0)
                {
                        <ul class="sub-menu">
                            @foreach (var item2 in item.Companies)
                    {
                                <li><a @*href="/Category/@item2.submenuurl/@item2.id"*@>@item2.Comp_Name</a>
                            @Html.ActionLink("Details", "Details", "Home",new { id = item.Comp_id })</li>
                            }
                        </ul>
                    }
                </li>
            }
        }
    </ul>

</nav>